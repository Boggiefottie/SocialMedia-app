# Prisma / PostgreSQL (use your Supabase connection string)
DATABASE_URL="postgresql://postgres:password@host:5432/postgres?schema=public"

# JWT
JWT_SECRET="change_me_super_secret"
ACCESS_TOKEN_EXPIRES="15m"
REFRESH_TOKEN_EXPIRES="7d"

# Supabase
SUPABASE_URL="https://YOUR-PROJECT.supabase.co"
SUPABASE_ANON_KEY="YOUR-ANON-KEY"
# Needed for server-side storage uploads (keep secret; do NOT commit)
SUPABASE_SERVICE_ROLE_KEY="YOUR-SERVICE-ROLE-KEY"
SUPABASE_STORAGE_BUCKET="socialconnect-images"

# Public (exposed to client)
NEXT_PUBLIC_SUPABASE_URL="https://YOUR-PROJECT.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="YOUR-ANON-KEY"
NEXT_PUBLIC_STORAGE_BUCKET="socialconnect-images"
